# Network Configuration
NETWORK=sepolia  # Options: localhost, sepolia, mainnet
FORK_MAINNET=false  # Set to true to fork mainnet for testing

# RPC URLs
SEPOLIA_RPC_URL=https://rpc.sepolia.org
MAINNET_RPC_URL=https://eth.llamarpc.com

# Private Keys - NEVER COMMIT REAL KEYS
PRIVATE_KEY=your_private_key_here  # For testnet deployment
MAINNET_PRIVATE_KEY=your_mainnet_private_key_here  # For mainnet (requires multi-sig)

# API Keys
ETHERSCAN_API_KEY=your_etherscan_api_key
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key
INFURA_API_KEY=your_infura_api_key
ALCHEMY_API_KEY=your_alchemy_api_key

# Oracle Configuration
CHAINLINK_ETH_USD_FEED=0x5f4eC3Df9cbd43714FE2740f5E3616155c5b8419  # Mainnet
CHAINLINK_ETH_USD_FEED_SEPOLIA=0x694AA1769357215DE4FAC081bf1f309aDC325306  # Sepolia

# Multi-signature Wallet
MULTISIG_ADDRESS=0x0000000000000000000000000000000000000000
MULTISIG_THRESHOLD=3
MULTISIG_OWNERS=owner1,owner2,owner3,owner4,owner5

# Security Settings
EMERGENCY_PAUSE_ENABLED=true
TIMELOCK_DELAY=172800  # 48 hours in seconds
MAX_GAS_PRICE=100  # Maximum gas price in gwei for deployments

# Monitoring
FORTA_API_KEY=your_forta_api_key
OPENZEPPELIN_DEFENDER_KEY=your_defender_key
SLACK_WEBHOOK_URL=your_slack_webhook_url
DISCORD_WEBHOOK_URL=your_discord_webhook_url

# Bug Bounty
BUG_BOUNTY_ENABLED=true
BUG_BOUNTY_MIN_PAYOUT=500  # USD
BUG_BOUNTY_MAX_PAYOUT=50000  # USD

# Testing
REPORT_GAS=true
RUN_EXPENSIVE_TESTS=false
FUZZ_RUNS=10000

# Deployment Safety
REQUIRE_AUDIT=true
MIN_TEST_COVERAGE=95  # Minimum test coverage percentage
ALLOW_MAINNET_DEPLOYMENT=false  # Must be explicitly set to true for mainnet